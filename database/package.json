{
  "name": "crm-immobiliare-database",
  "version": "3.0.0",
  "private": true,
  "description": "Database layer for CRM Immobiliare",
  "scripts": {
    "generate": "cd prisma && npx prisma generate",
    "push": "cd prisma && npx prisma db push",
    "studio": "cd prisma && npx prisma studio",
    "seed": "cd prisma && npx tsx seed.ts",
    "migrate": "cd prisma && npx prisma migrate dev",
    "migrate:deploy": "cd prisma && npx prisma migrate deploy",
    "format": "cd prisma && npx prisma format"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^24.8.0",
    "bcryptjs": "^2.4.3",
    "prisma": "^6.19.0",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3"
  }
}
