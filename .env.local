# ==============================================================================
# CRM IMMOBILIARE - CONFIGURAZIONE LOCALE (SENZA DOCKER)
# ==============================================================================
# Usa SQLite locale e servizi in esecuzione sul tuo computer
# ==============================================================================

# ------------------------------------------------------------------------------
# DATABASE - SQLite locale (nessun PostgreSQL richiesto)
# ------------------------------------------------------------------------------
DATABASE_URL="file:./packages/database/prisma/dev.db"

# ------------------------------------------------------------------------------
# AUTHENTICATION & SECURITY
# ------------------------------------------------------------------------------
# Secrets auto-generati da setup script
SESSION_SECRET=local-dev-session-secret-change-in-production
NEXTAUTH_SECRET=local-dev-nextauth-secret-change-in-production
NEXTAUTH_URL=http://localhost:3000

# ------------------------------------------------------------------------------
# API KEYS (configurabili via GUI dopo l'avvio)
# ------------------------------------------------------------------------------
# Google AI Studio - Ottieni chiave GRATUITA: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=

# OpenRouter (opzionale, non ancora usato)
OPENROUTER_API_KEY=

# ------------------------------------------------------------------------------
# APPLICATION
# ------------------------------------------------------------------------------
NODE_ENV=development

# Porte applicazione
PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:3001

# Backend AI (FastAPI Python)
AI_BACKEND_URL=http://localhost:8000

# ------------------------------------------------------------------------------
# AI CONFIGURATION
# ------------------------------------------------------------------------------
GOOGLE_MODEL=gemini-2.5-flash
AI_TEMPERATURE=0.3
AI_MAX_TOKENS=8192
AI_TIMEOUT=60
AI_MAX_RETRIES=3
AI_RETRY_DELAY=2

# ------------------------------------------------------------------------------
# RAG CONFIGURATION
# ------------------------------------------------------------------------------
RAG_TOP_K=5
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50
EMBEDDING_MODEL=models/text-embedding-004

# ------------------------------------------------------------------------------
# VECTOR STORE
# ------------------------------------------------------------------------------
# Usa in-memory per sviluppo locale (nessun server richiesto)
QDRANT_MODE=memory

# ------------------------------------------------------------------------------
# CACHING
# ------------------------------------------------------------------------------
CACHE_DIR=.cache
CACHE_TTL=3600

# ------------------------------------------------------------------------------
# LOGGING
# ------------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=console
ENABLE_TRACING=false
SERVICE_NAME=crm-immobiliare-ai

# ------------------------------------------------------------------------------
# CORS
# ------------------------------------------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:3001,http://127.0.0.1:3001

# ------------------------------------------------------------------------------
# HOST & PORT (per FastAPI backend)
# ------------------------------------------------------------------------------
HOST=127.0.0.1
