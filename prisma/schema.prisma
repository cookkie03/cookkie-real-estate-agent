// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Immobile {
  id          String   @id @default(cuid())
  titolo      String
  tipologia   String   // appartamento, villa, etc
  prezzo      Float
  superficie  Float
  locali      Int
  bagni       Int

  // Location
  indirizzo   String
  citta       String
  cap         String
  provincia   String
  latitudine  Float?
  longitudine Float?
  zona        String?

  // Details
  descrizione String
  caratteristiche String? // JSON as text
  foto        String?  // JSON array as text

  // Metadata
  fonte       String?
  urlOriginale String?
  stato       String   // disponibile, venduto, etc

  // Relations
  matches     Match[]
  azioni      Azione[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Cliente {
  id          String   @id @default(cuid())
  nome        String
  cognome     String
  email       String?  @unique
  telefono    String?

  // Search preferences
  tipologiaRichiesta String?
  budgetMin   Float?
  budgetMax   Float?
  superficieMin Float?
  localiMin   Int?
  zoneInteresse String? // JSON array as text

  // Status
  priorita    String   @default("media")   // alta, media, bassa
  stato       String   @default("attivo")  // attivo, in_trattativa, concluso
  note        String?

  // Relations
  matches     Match[]
  azioni      Azione[]
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Match {
  id          String   @id @default(cuid())
  immobileId  String
  clienteId   String
  score       Float    // 0-100
  motivi      String?  // JSON as text
  stato       String   // proposto, visto, interessato, etc

  immobile    Immobile @relation(fields: [immobileId], references: [id], onDelete: Cascade)
  cliente     Cliente  @relation(fields: [clienteId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([immobileId])
  @@index([clienteId])
}

model Azione {
  id          String   @id @default(cuid())
  tipo        String   // chiamata, visita, email, follow_up, etc
  descrizione String
  clienteId   String?
  immobileId  String?

  priorita    String   @default("media")   // alta, media, bassa
  stato       String   @default("da_fare") // da_fare, in_corso, completata
  dataScadenza DateTime?

  cliente     Cliente?  @relation(fields: [clienteId], references: [id], onDelete: SetNull)
  immobile    Immobile? @relation(fields: [immobileId], references: [id], onDelete: SetNull)
  
  createdAt   DateTime @default(now())
  completedAt DateTime?

  @@index([clienteId])
  @@index([immobileId])
  @@index([stato])
}

model Connector {
  id          String   @id @default(cuid())
  name        String
  type        String   // gmail, calendar, whatsapp, studio, portale, idealista
  status      String   @default("idle") // connected, pending, error, idle
  credentials String?  // JSON encrypted credentials
  lastSync    DateTime?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([type])
}

model User {
  id          String   @id @default(cuid())
  firstName   String
  lastName    String
  email       String   @unique
  phone       String?
  company     String?
  role        String?
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
