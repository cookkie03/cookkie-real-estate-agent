  },
  "dependencies": {
    "@prisma/client": "^6.1.0",
    "next": "^14.2.18",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "24.8.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.18",
    "prisma": "^6.1.0",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3"
  }
}
