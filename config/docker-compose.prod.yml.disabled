# ==============================================
# PRODUCTION - Docker Compose Configuration
# Pulls pre-built images from a Docker registry
# ==============================================

version: '3.9'

services:
  # ====================
  # Frontend Service
  # ====================
  frontend:
    image: ghcr.io/cookkie03/cookkie-real-estate-agent/frontend:main
    container_name: crm-frontend-prod
    ports:
      - "3000:3000"
    env_file:
      - .env.frontend
    depends_on:
      - backend
    networks:
      - crm-network
    restart: unless-stopped

  # ====================
  # Backend Service
  # ====================
  backend:
    image: ghcr.io/cookkie03/cookkie-real-estate-agent/backend:main
    container_name: crm-backend-prod
    ports:
      - "3001:3001"
    env_file:
      - .env.backend
      - .env.database # Carica la configurazione del DB
    depends_on:
      postgres:
        condition: service_healthy
    networks:
      - crm-network
    restart: unless-stopped

  # ====================
  # PostgreSQL Service
  # ====================
  postgres:
    image: postgres:15-alpine
    container_name: crm-postgres-db-prod
    restart: always
    ports:
      - "5432:5432"
    env_file:
      - .env.docker
    volumes:
      - pgdata:/var/lib/postgresql/data
    networks:
      - crm-network
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U $$POSTGRES_USER -d $$POSTGRES_DB"]
      interval: 10s
      timeout: 5s
      retries: 5

# ====================
# Networks & Volumes
# ====================
networks:
  crm-network:
    driver: bridge

volumes:
  pgdata:
    driver: local
