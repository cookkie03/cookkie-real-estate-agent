# ==============================================
# CRM Immobiliare - Docker Compose Configuration
# Orchestrates all services: Frontend, Backend, AI Tools
# ==============================================

version: '3.9'

services:
  # ====================
  # Frontend Service
  # ====================
  frontend:
    build:
      context: ../frontend
      dockerfile: Dockerfile
    container_name: crm-frontend
    ports:
      - "3000:3000"
    environment:
      - NODE_ENV=production
      - NEXT_PUBLIC_API_URL=http://backend:3001
    env_file:
      - .env.frontend
    depends_on:
      backend:
        condition: service_healthy
    networks:
      - crm-network
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "node", "-e", "require('http').get('http://localhost:3000', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    volumes:
      - frontend-cache:/app/.next/cache
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"

  # ====================
  # Backend Service
  # ====================
  backend:
    build:
      context: ../backend
      dockerfile: Dockerfile
    container_name: crm-backend
    ports:
      - "3001:3001"
    environment:
      - NODE_ENV=production
      - DATABASE_URL=file:/app/database/prisma/dev.db
    env_file:
      - .env.backend
    networks:
      - crm-network
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "node", "-e", "require('http').get('http://localhost:3001/api/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)})"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    volumes:
      - database-data:/app/database
      - backend-logs:/app/logs
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"

  # ====================
  # AI Tools Service
  # ====================
  ai-tools:
    build:
      context: ../ai_tools
      dockerfile: Dockerfile
    container_name: crm-ai-tools
    ports:
      - "8000:8000"
    environment:
      - PYTHONUNBUFFERED=1
      - DATABASE_URL=file:/app/database/prisma/dev.db
    env_file:
      - .env.ai
    depends_on:
      backend:
        condition: service_healthy
    networks:
      - crm-network
    restart: unless-stopped
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8000/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 40s
    volumes:
      - ai-cache:/app/.cache
      - ai-logs:/app/logs
      - database-data:/app/database:ro  # Read-only access to database
    logging:
      driver: "json-file"
      options:
        max-size: "10m"
        max-file: "3"

  # ====================
  # PostgreSQL Service
  # ====================
  postgres:
    image: postgres:15-alpine
    container_name: crm_postgres_db
    restart: always
    ports:
      - "5432:5432"
    env_file:
      - .env.docker
    volumes:
      - pgdata:/var/lib/postgresql/data
    networks:
      - crm-network
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U $$POSTGRES_USER -d $$POSTGRES_DB"]
      interval: 10s
      timeout: 5s
      retries: 5

# ====================
# Networks
# ====================
networks:
  crm-network:
    driver: bridge
    name: crm-immobiliare-network

# ====================
# Volumes
# ====================
volumes:
  # Database volume (persistent)
  database-data:
    name: crm-database
    driver: local

  # Cache volumes (can be ephemeral)
  frontend-cache:
    name: crm-frontend-cache
    driver: local

  ai-cache:
    name: crm-ai-cache
    driver: local

  # Log volumes (persistent)
  backend-logs:
    name: crm-backend-logs
    driver: local

  ai-logs:
    name: crm-ai-logs
    driver: local

  pgdata:
    name: crm-postgres-data
    driver: local
