# ==============================================================================
# AI TOOLS - Environment Variables Template
# ==============================================================================
# Copy this file to ai_tools/.env and fill in your values
# ==============================================================================

# ------------------------------------------------------------------------------
# DATABASE
# ------------------------------------------------------------------------------
# Path to centralized SQLite database (shared with all modules)
DATABASE_URL=sqlite:///../database/prisma/dev.db

# ------------------------------------------------------------------------------
# GOOGLE AI (REQUIRED)
# ------------------------------------------------------------------------------
# Google API Key for Gemini models
# Get your key at: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Google Gemini model to use
GOOGLE_MODEL=gemini-1.5-pro

# ------------------------------------------------------------------------------
# VECTOR STORE - QDRANT
# ------------------------------------------------------------------------------
# Qdrant mode: 'memory' (in-memory) or 'server' (Docker/external)
QDRANT_MODE=memory

# Qdrant server settings (only if QDRANT_MODE=server)
QDRANT_HOST=localhost
QDRANT_PORT=6333

# ------------------------------------------------------------------------------
# SERVER
# ------------------------------------------------------------------------------
# FastAPI server host
HOST=0.0.0.0

# FastAPI server port
PORT=8000

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Environment mode
ENVIRONMENT=development

# ------------------------------------------------------------------------------
# LOGGING
# ------------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Log format: 'console' or 'json'
LOG_FORMAT=console

# ------------------------------------------------------------------------------
# TRACING (OpenTelemetry)
# ------------------------------------------------------------------------------
# Enable distributed tracing
ENABLE_TRACING=true

# Service name for tracing
SERVICE_NAME=crm-immobiliare-ai

# ------------------------------------------------------------------------------
# AI CONFIGURATION
# ------------------------------------------------------------------------------
# AI model temperature (0.0 to 1.0)
AI_TEMPERATURE=0.7

# Maximum tokens for AI responses
AI_MAX_TOKENS=2048

# AI request timeout (seconds)
AI_TIMEOUT=60

# ------------------------------------------------------------------------------
# RAG CONFIGURATION
# ------------------------------------------------------------------------------
# Number of documents to retrieve
RAG_TOP_K=5

# Chunk size for document splitting
RAG_CHUNK_SIZE=512

# Chunk overlap for document splitting
RAG_CHUNK_OVERLAP=50

# Google embedding model
EMBEDDING_MODEL=models/text-embedding-004

# ------------------------------------------------------------------------------
# CACHE
# ------------------------------------------------------------------------------
# Cache directory (relative to ai_tools/)
CACHE_DIR=.cache

# Cache TTL in seconds (3600 = 1 hour)
CACHE_TTL=3600
