# ==============================================
# Database Configuration Template
# ==============================================

# Database URL - Points to centralized database
# SQLite (default for development)
DATABASE_URL="file:../database/prisma/dev.db"

# PostgreSQL (for production - future)
# DATABASE_URL="postgresql://user:password@localhost:5432/crm_immobiliare"

# MySQL (alternative - future)
# DATABASE_URL="mysql://user:password@localhost:3306/crm_immobiliare"

# SQL Debug Mode (log all SQL queries)
SQL_DEBUG=false

# Database connection pool settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
