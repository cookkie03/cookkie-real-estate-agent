# ==============================================================================
# CRM Immobiliare - Docker Environment Variables
# ==============================================================================
# Copy this file to .env in project root for Docker Compose
# cp .env.docker.example .env
# ==============================================================================

# ==============================================================================
# DATABASE (PostgreSQL)
# ==============================================================================
POSTGRES_USER=crm_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=crm_immobiliare
POSTGRES_PORT=5432

# ==============================================================================
# REDIS (Cache & Queue)
# ==============================================================================
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD
REDIS_PORT=6379

# ==============================================================================
# API KEYS (Required)
# ==============================================================================
# Get your Google API key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=

# ==============================================================================
# AI CONFIGURATION
# ==============================================================================
GOOGLE_MODEL=gemini-1.5-pro
AI_TEMPERATURE=0.7

# ==============================================================================
# QDRANT (Vector Database - Optional)
# ==============================================================================
QDRANT_MODE=memory
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334

# ==============================================================================
# SERVICE PORTS
# ==============================================================================
FRONTEND_PORT=3000
BACKEND_PORT=3001
AI_TOOLS_PORT=8000

# ==============================================================================
# PROXY CONFIGURATION (Optional - For Scraping)
# ==============================================================================
PROXY_SERVER=
PROXY_USERNAME=
PROXY_PASSWORD=

# ==============================================================================
# SMTP (Email - Optional)
# ==============================================================================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@crm-immobiliare.local

# ==============================================================================
# SECURITY
# ==============================================================================
# Generate with: openssl rand -base64 32
SESSION_SECRET=CHANGE_ME_SESSION_SECRET

# ==============================================================================
# CORS ORIGINS
# ==============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ==============================================================================
# NODE ENVIRONMENT
# ==============================================================================
NODE_ENV=production
