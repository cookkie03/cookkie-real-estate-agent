# ==============================================================================
# CRM Immobiliare - Docker Environment Variables
# ==============================================================================
#
# 1. Copy this file to .env in the docker directory
# 2. Update all values (especially secrets and API keys)
# 3. NEVER commit the .env file to git
#
# ==============================================================================

# ------------------------------------------------------------------------------
# DATABASE (PostgreSQL)
# ------------------------------------------------------------------------------
DB_NAME=crm_immobiliare
DB_USER=crm_user
DB_PASSWORD=changeme_secure_password_here
DB_PORT=5432

# ------------------------------------------------------------------------------
# AUTHENTICATION (NextAuth.js)
# ------------------------------------------------------------------------------
# Generate a secure secret: openssl rand -base64 32
NEXTAUTH_SECRET=your-super-secure-secret-here-min-32-chars
NEXTAUTH_URL=http://localhost:3001

# ------------------------------------------------------------------------------
# GOOGLE AI API
# ------------------------------------------------------------------------------
# Get your API key from: https://makersuite.google.com/app/apikey
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_MODEL=gemini-1.5-pro

# ------------------------------------------------------------------------------
# PORTS
# ------------------------------------------------------------------------------
FRONTEND_PORT=3000
BACKEND_PORT=3001
AI_TOOLS_PORT=8000

# ------------------------------------------------------------------------------
# FRONTEND (Next.js)
# ------------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://localhost:3001

# ------------------------------------------------------------------------------
# AI CONFIGURATION
# ------------------------------------------------------------------------------
# Qdrant vector store mode: memory | http | cloud
QDRANT_MODE=memory

# Logging
LOG_LEVEL=INFO

# Tracing
ENABLE_TRACING=true

# AI Parameters
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2048
AI_TIMEOUT=60

# RAG Configuration
RAG_TOP_K=5
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=50
EMBEDDING_MODEL=models/text-embedding-004

# Cache
CACHE_TTL=3600
